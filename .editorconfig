root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
[*.{js,jsx,cjs,json,html,css,sass,scss,less,yml,yaml}]
charset = utf-8

# Set default indentation
[*.{js,jsx,cjs,json,html,css,sass,scss,less,yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{sh,env}]
end_of_line = lf
indent_size=4
